@@ -20,6 +20,21 @@
 # in the file LICENSE.
 # ------------------------------------------------------------------
 
+# Add additional variables
+OS:=$(shell uname -s)
+PKG_NAME:=bzip2
+LIB_NAME:=libbz2
+ifeq ($(OS),Darwin)
+	SHARED_EXT:=dylib
+	SOFLAG:=-Wl,-install_name
+else ifeq ($(OS),Linux)
+	SHARED_EXT:=so
+	SOFLAG:= -Wl,-soname
+endif
+
+PKG_VERSION:=1.0.8
+MAJOR_MINOR:=1.0
+DYLIB_NAME:=$(LIB_NAME).$(SHARED_EXT)
 
