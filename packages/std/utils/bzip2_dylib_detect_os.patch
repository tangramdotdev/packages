+	$(CC) $(CFLAGS) -o $(PKG_NAME)-shared bzip2.c $(DYLIB_NAME).$(PKG_VERSION)
+	ln -s $(DYLIB_NAME).$(PKG_VERSION) $(DYLIB_NAME).$(MAJOR_MINOR)
 
 clean: 
